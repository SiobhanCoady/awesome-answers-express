<%
  const actionUrl =
    /post/i.test(method) ? "/questions" : `/questions/${question.id}`;
 %>

<form class="" action="<%= actionUrl %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <div class="">
    <label for="title">Title</label>
    <input type="text" id="title"
      name="title" value="<%= question.title %>">
  </div>
  <div class="">
    <label for="description"></label>
    <textarea id="description" name="description" rows="8" cols="80"><%= question.description %></textarea>
  </div>
  <input type="submit" name="submit" value="Submit">
</form>
